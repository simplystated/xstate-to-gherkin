{
  "name": "@simplystated/xstate-to-gherkin",
  "version": "0.3.0",
  "description": "Generate gherkin test scripts from an xstate statechart",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "update-snapshots": "jest --updateSnapshot",
    "prettier": "prettier --write '{src,test}/**/*.{ts,js,yaml,yml,json}'",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplystated/xstate-to-gherkin.git"
  },
  "keywords": [
    "xstate"
  ],
  "author": "Adam Berger <adam@simplystated.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simplystated/xstate-to-gherkin/issues"
  },
  "homepage": "https://github.com/simplystated/xstate-to-gherkin#readme",
  "files": [
    "README",
    "LICENSE",
    "dist",
    "package.json",
    "patches"
  ],
  "bin": "./bin/cli.js",
  "devDependencies": {
    "@cucumber/gherkin": "^24.0.0",
    "@cucumber/messages": "^19.1.4",
    "@types/jest": "^29.0.3",
    "jest": "^29.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@xstate/graph": "^1.4.2",
    "@xstate/machine-extractor": "^0.7.1",
    "arg": "^5.0.2",
    "install": "^0.13.0",
    "npm": "^8.19.2",
    "patch-package": "^6.4.7",
    "xstate": "^4.33.6"
  }
}
